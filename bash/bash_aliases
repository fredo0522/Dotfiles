#
# Own aliases
#

# Files folders
alias doc='cd ~/Documents'
alias drop='cd ~/Dropbox'
alias u='cd ~/Dropbox/University'
alias u5='cd ~/Dropbox/University/QuintoSemestre'
alias project='cd ~/Dropbox/Projects'
alias stuff='cd ~/Dropbox/Stuff'
alias dot='cd ~/dotfiles'
alias dow='cd ~/Downloads'
alias usb='cd /run/media/$(whoami)/'

# Quick changes
alias vc='vim ~/.vimrc'
alias vb='vim ~/.bashrc'
alias vba="vim ~/.bash_aliases"
alias vz="vim ~/.zshrc"
alias vt="vim ~/.tmux.conf"
alias vi3="vim ~/.i3/config"
alias :q="exit"

# Current use
alias la='ls -A'
alias ll='ls -alF'
alias ..='cd ..'
alias ag='ag --hidden -U'

# Open any file from terminal (Ranger use rifle to open files)
alias open='rifle 2>/dev/null'

# Manage screens connections
alias screens='arandr &'

