#
# Own aliases
#

# Files folders
alias doc='cd ~/Documents'
alias j='cd ~/Documents/University'
alias stuff='cd ~/Documents/Stuff'
alias dot='cd ~/dotfiles'
alias dow='cd ~/Downloads'
alias usb='cd /run/media/$(whoami)/'

# Quick changes
alias vc='vim ~/.vimrc'
alias vb='vim ~/.bashrc'
alias vba="vim ~/.bash_aliases"
alias vz="vim ~/.zshrc"
alias vt="vim ~/.tmux.conf"
alias vi3="vim ~/.i3/config"

# Current use
alias la='ls -A'
alias ll='ls -alF'
alias ..='cd ..'

# Open any file from terminal (Ranger use rifle to open files)
alias open='rifle 2>/dev/null'

