# Own aliases

# Files folders
alias doc='cd ~/Documents'
alias dow='cd ~/Downloads'
alias dot='cd ~/dotfiles'
alias stuff='cd ~/Documents/Stuff'
alias usb='cd /run/media/$(whoami)/'
alias j='cd ~/Documents/Javeriana'

# Quick changes
alias vc='vim ~/.vimrc'
alias vb='vim ~/.bashrc'
alias vba="vim ~/.bash_aliases"
alias vz="vim ~/.zshrc"
alias vt="vim ~/.tmux.conf"
alias vi3="vim ~/.i3/config"
alias :q='exit'
alias vi='vim'
alias la='ls -A'
alias ..='cd ..'
alias ....='cd ../..'

# Open any file from terminal (Need Ranger)
alias open='rifle 2>/dev/null'

# Tmux aliases
alias t='tmux'

